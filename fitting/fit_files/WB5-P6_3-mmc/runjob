#!/bin/bash

# Edit this file to contain commands required to run input file
# generated by Template job factory and put results in file
# accessible by evaluators specified in 'job.cfg'
env OMP_NUM_THREADS=3 lmp -sf omp -i WB.lmpin > WB.lmpout

# 6 core cpu = 3 mpi tasks x 2 threads
# anything > 6 will cause over communication through message interface
# env OMP_NUM_THREADS=2 mpirun -np 3 lmp_mpi -sf omp -pk omp 2 -in WB.lmpin > WB.lmpout